        <title>
            Member Login
        </title>
    </head>

    <body>
        <form action="/member/loginverify" method="post" class="formdes">
            <h3><center>Member Login</center></h3><br>
              <div class="mb-3">
                <label>Member Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter Member Email" required>
              </div>
              <div class="mb-3">
                <label>Member Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter Member Password" required>
              </div>
              <button type="submit" class="btn btn-primary w-100">Login Member</button> <br> <br>
              <hr style=" border: 2px solid black;opacity: 100;"> <br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <button type="submit" class="btn btn-success w-49" onclick="window.location.href = 'member/member-register'">Register Member</button>
              <button type="submit" class="btn btn-danger w-49" onclick="window.location.href = 'member/member-forgotpassword'">Forgot Password</button><br> <br>
              <button type="submit" class="btn btn-dark w-100" onclick="window.location.href = 'member/guesthome'">Login as Guest</button> <br> <br>
          </form>
    </body>

</html>
