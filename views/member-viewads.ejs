<!DOCTYPE html>
<html>
    <head>
        <style>
            .mainhead{
                background-color:lightskyblue;
                padding: 30px;
            }
        </style>

        <title> List of Ads </title>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
    

    <body class="mainhead">
        <nav class="navbar navbar-dark bg-dark" style="padding: 1%;">
            <h1 style="color: gold;">Welcome Member </h1> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <button class="btn btn-primary btnAction" onclick="window.location.href = 'createads';">Create Ad</button>&nbsp;
            <button class="btn btn-secondary btnAction" onclick="window.location.href = 'viewads';">View all Ads</button>&nbsp;
            <button class="btn btn-success btnAction" onclick="window.location.href = 'updatepassword';">Update Password</button> &nbsp;          
            <button class="btn btn-warning btnAction" onclick="window.location.href = 'updatememberinfo';">Update Profile</button>   &nbsp;                 
            <button class="btn btn-info btnAction" onclick="window.location.href = 'deleteads';">Delete Ads</button>    &nbsp;     
            <button class="btn btn-light btnAction" onclick="window.location.href = 'deleteaccount';">Delete Account</button>&nbsp;
            <button class="btn btn-danger btnAction" onclick="window.location.href = 'logout';" style="margin-left: 5%;">Logout</button>
          </nav>
        <br>
        <table class="table table-hover table-dark" id="myTable" style="text-align: center;margin-top:2%">
            
            <thead class="thead-dark">
            <tr>
                <th>Ad Image</th>
                <th>Ad Name</th>
                <th>Ad Description</th>
                <th>Ad Price</th>
                <th>Created Date</th>
                <th colspan="3">Action</th>
            </tr>
        </thead>
        <%
        if( adata.length > 0 )
        {
            adata.forEach(function (data){
                
                %>

                    <tr>
                        <% var imageUrl = "/media/"+data._id+"."+data.image%>
                       <td>  <img src=<%= imageUrl %>  style="width:200px;height:200px;"/></td>
                        <td><%=data.name%></td>
                        <td><%=data.description%></td>
                        <td><%=data.price%></td>
                        <td> <% var dObj=new Date(data.createdDateTime) 
                            var date=dObj.getDate()+"/"+(dObj.getMonth()+1)+"/"+dObj.getFullYear()+" "+ dObj.getHours()+":"+dObj.getMinutes()+":"+dObj.getSeconds() %>
                                <%=date%></td>
                        <td><a class="" href="/member/updateaddinfo/<%=data._id%>">Update Ad Info</a> </td> 
                        <td><a class="" href="/member/reuploadImg/<%=data._id%>">Update Ad Image</a> </td> 
                        <td><a class="" href="/member/deleteaddinfo/<%=data._id%>">Delete Ad</a> </td>
                    </tr>

                    <%

                })
            }
            %>
        </table>
    </body>
</html>