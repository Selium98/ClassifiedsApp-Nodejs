<!doctype html>
    <head>
        <style>
            .formdes{
                padding: 2%;
                background: url('https://cdn.wallpapersafari.com/90/24/7IEhgF.jpg');
                background-color:aquamarine;
                width: 30%;
                margin-top: 4%;
                align-items: center;
                margin-left: 35%;
                border-radius: 20px ;
                box-shadow: 10px 15px #000000;
            }

            body{
            background: url('https://assets-global.website-files.com/5e39e095596498a8b9624af1/5f6e93d250a6d04f4eae9f02_Backgrounds-WFU-thumbnail-(size).jpg');
            background-repeat: no-repeat;
            background-size: cover;
            }
        </style>

        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        
        <title>
            Update Member Info
        </title>
    </head>

    <body>
        <form action="/member/updatememberinfopost" method="post" class="formdes">
            <h3><center>Member Update Info</center></h3><br>
            <div class="mb-3">
                <label>Member ID</label>
                <input type="text" class="form-control" id="id" name="id" value="<%=data._id%>"readonly required>
              </div>
              
              <div class="mb-3">
                <label>Member Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%=data.email%>"readonly required>
              </div>
            <div class="mb-3">
                <label>Member Username</label>
                <input type="text" class="form-control" id="uname" name="uname" value="<%=data.uname%>" placeholder="Enter Member Username" required>
              </div>
              <div class="mb-3">
                <label>Member First Name</label>
                <input type="text" class="form-control" id="fname" name="fname" value="<%=data.fname%>"placeholder="Enter Member First Name" required>
              </div>
              <div class="mb-3">
                <label>Member Last Name</label>
                <input type="text" class="form-control" id="lname" name="lname" value="<%=data.lname%>"placeholder="Enter Member Last Name" required>
              </div>
              <div class="mb-3">
                <label>Member Stream</label>
                <input type="text" class="form-control" id="stream" name="stream" value="<%=data.stream%>"placeholder="Enter Member Stream" required>
              </div>
              <div class="mb-3">
                <label>Member Age</label>
                <input type="number" class="form-control" id="age" name="age" value="<%=data.age%>" placeholder="Enter Member Age" required>
              </div>
              <div class="mb-3">
                <label>Member Date of Birth</label>
                <input type="date" class="form-control" id="dob" name="dob" value="<%=data.dob%>" placeholder="Enter Member DOB" required>
              </div>
              <button type="submit" class="btn btn-primary w-100">Update Info</button> <br> <br>
          </form>
    </body>

</html>
